#%RAML 1.0
title: Example API
baseUri: http://example.com/api

/test:
  get:
    responses:
      200:
        headers:
        body:
          application/json:
            example:
              success: true

/nested:
  get:
    responses:
      200:
        body:
          application/json:
            example:
              nested:
                success: true

/examples:
  get:
    responses:
      200:
        body:
          application/json:
            examples:
              example1:
                name: example1
              example2:
                name: example2

/noexample:
  get:
    responses:
      200:
        body:
         application/json:

/headersdefaultbeforeexample:
  get:
    responses:
      200:
        headers:
          foo:
            example: bar
            default: test

/headersexample:
  get:
    responses:
      200:
        headers:
          foo:
            example: bar

/headersexamples:
  get:
    responses:
      200:
        headers:
          foo:
            examples:
              first: bar
              second: foo
              third: random
              fourth: another

/headersdefault:
  get:
    responses:
      200:
        headers:
          foo:
            default: test